@using WebApplication.ViewModels
@model ViewModel

@{
    ViewData["Title"] = "Displaying information about country";
}

<form method="POST">
    <h4>Информация по одной стране</h4><br />

    <p>Название: <input style="margin-left: 20px; width:350px" type="text" asp-for="name" value="@Model.name" readonly /></p>
    <p>Код: <input style="margin-left: 63px; width:350px" type="text" asp-for="code" value="@Model.code" readonly /></p>
    <p>Столица: <input style="margin-left: 29px; width:350px" type="text" asp-for="city" value="@Model.city" readonly /></p>
    <p>Площадь: <input style="margin-left: 23px; width:350px" type="number" asp-for="area" value="@Model.area" readonly /></p>
    <p>Население: <input style="margin-left: 11px; width:350px" type="number" asp-for="population" value="@Model.population" readonly /></p>
    <p>Регион: <input style="margin-left: 39px; width:350px" type="text" asp-for="region" value="@Model.region" readonly /></p>

    <input type="submit" value="Сохранить информацию" asp-action="SaveCity" />
    <input style="margin-left: 90px;" type="submit" value="Вернуться к поиску" asp-action="Index" />
</form>
